@model List<ResumeProject.Models.TBLCATEGORY>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kategori Sayfası</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori İsmi</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Mesaj Tür</th>
    </tr>
    @foreach(var item in Model)
            {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td><a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-outline-success">Güncelle</a></td>
            <td><a href="/Category/GetMessageBySubject/@item.CategoryID" class="btn btn-outline-success">Mesaj Tür</a></td>
        </tr>



            }


</table>
<a href="/Category/AddCategory"class="btn btn-primary">Kategori Ekle</a>